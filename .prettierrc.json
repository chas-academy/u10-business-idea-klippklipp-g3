{
	"trailingComma": "all",
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"semi": true,
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.yml",
			"options": {
				"trailingComma": "none",
				"tabWidth": 2,
				"useTabs": false,
				"singleQuote": false
			}
		}
	]
}
